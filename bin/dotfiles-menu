COMMAND=$(gum choose "Features" "Migration" "System" "Quit" --height 10 --header "" | tr '[:upper:]' '[:lower:]')

case $COMMAND in
    "features")
        source $DOTFILES_PATH/bin/dotfiles-features
        ;;
    "system")
        source $DOTFILES_PATH/bin/dotfiles-system
        ;;
    "migration")
        source $DOTFILES_PATH/bin/dotfiles-migration
        ;;
    *)
     exit 0
esac
