printHeader

COMMAND=$(gum choose "Features" "DevEnv" "Migration" "System" "Quit" --height 10 --header "" | tr '[:upper:]' '[:lower:]')

case $COMMAND in
    "features")
        source $DOTFILES_PATH/bin/dotfiles-features
        ;;
    "devenv")
        source $DOTFILES_PATH/bin/dotfiles-dev-env
        ;;
    "migration")
        source $DOTFILES_PATH/bin/dotfiles-migration
        ;;
    "system")
        source $DOTFILES_PATH/bin/dotfiles-system
        ;;
esac
