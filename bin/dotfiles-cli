#!/bin/bash -i

# set -x

trap 'echo "(exit) ðŸ§¹ Cleaning up..."; source $DOTFILES_PATH/scripts/cleanup.sh' EXIT
trap 'echo "(int) ðŸ§¹ Cleaning up..."; source $DOTFILES_PATH/scripts/cleanup.sh' INT


export DOTFILES_PATH=$HOME/dotfiles

[[ $- != *i* ]] && {
    printf "ðŸ”¥ Rerun in interactive mode: $ bash -i ./install.sh\n"
    exit 1
}

source $DOTFILES_PATH/scripts/variables.sh
